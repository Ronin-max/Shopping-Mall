/**index.wxss**/
button{
  padding: 0;
  margin: 0;
}
.header{
  position: fixed;
  display:flex;
  flex-direction: row;
  align-items: center;
  width: 100vw;
  height: 10vh;
  background-color: #0f1123;
  z-index: 1000;
}
/* 商品查询 */
.header .search{
  width: 50vw;
  height: 50%;
  margin: 0 0 0 20vw;
  padding-left: 1em;
  color: #8ed7ff;
  border-radius: 15rpx 0 0 15rpx;
  background-color: #8a8a8a;
}
.header .searchBtn{
  width: 10vw;
  height: 50%;
  margin: 0;
  border-left: 6rpx solid #1296db;
  border-radius: 0 15rpx 15rpx 0;
  background-color: #8a8a8a;
}
.header .searchBtn image{
  width: 60%;
  height: 70%;
  margin-top: 1vw;
  margin-left: 1vw;
}

/* swiper */
.swiper{
  padding-top: 11vh;
  padding-left: 2vw;
  padding-right: 2vw;
}
.swiper swiper-item image{
  width: 100%;
  height: 100%;
}

/* hotSort */
.hotSort{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 15vh;
  /* background-color: #8a8a8a; */
}
.hotSort>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  height: 100%;
  font-size: 0.8rem;
  font-weight: bold;
  color: #777777;
}
.hotSort view image{
  width: 50%;
  height: 50%;
}

/* recommend */
.recommendTitle{
  height: 8vh;
  line-height: 8vh;
  text-align: center;
  font-weight: bold;
  color: #1296db;
  background-color: #0f1123;
}
.recommend{
  display: flex;
  flex-wrap: wrap;
}
.recommend .goods{
  width: 46vw;
  height: 50vw;
  padding: 2vw;
  margin-top: 6vw;
  margin-left: 2vw;
  margin-right: 2vw;
  font-size: 0.8rem;
  border-radius: 3vw;
  box-shadow: 10rpx 10rpx 20rpx #666666;
  box-sizing: border-box;
  background-color: #69afc0;
}
.recommend .goods view>view:nth-child(1){
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-weight: bold;
}
.recommend .goods image{
  width: 100%;
  height: 60%;
}