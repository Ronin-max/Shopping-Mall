/* pages/search/search.wxss */
.header{
  position: fixed;
  top: 0;
  width: 100vw;
  height: 10vh;
  text-align: center;
  line-height: 10vh;
  font-weight: bold;
  color: #8ed7ff;
  background-color: #0f1123;
}
.recommend{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10vh;
}
.recommend .goods{
  width: 46vw;
  height: 50vw;
  padding: 2vw;
  margin-top: 6vw;
  margin-left: 2vw;
  margin-right: 2vw;
  font-size: 0.8rem;
  border-radius: 3vw;
  box-shadow: 10rpx 10rpx 20rpx #666666;
  box-sizing: border-box;
  background-color: #69afc0;
}
.recommend .goods view>view:nth-child(1){
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-weight: bold;
}
.recommend .goods image{
  width: 100%;
  height: 60%;
}